<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.goldsaints.mofaxin.dao.TfzProfitExDAO">

    <resultMap id="BaseResultMap" type="com.goldsaints.mofaxin.domain.TfzProfit">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="userId" jdbcType="BIGINT" property="userId" />
        <result column="towerId" jdbcType="BIGINT" property="towerId" />
        <result column="reftime" jdbcType="BIGINT" property="reftime" />
        <result column="price" jdbcType="VARCHAR" property="price" />
        <result column="ctime" jdbcType="BIGINT" property="ctime" />
        <result column="utime" jdbcType="BIGINT" property="utime" />
        <result column="state" jdbcType="INTEGER" property="state" />
    </resultMap>
    
    <sql id="Base_Column_List">
        id, username, passwd, sex, age, headimg, nickname, mobile, realname, idno, email, 
        mfs, money, ctime, utime, skype, uid, state
    </sql>

    <insert id="saveProfits" parameterType="java.util.List">
        insert into tfz_profit (userId, towerId, reftime, price, ctime, utime)
        values
        <foreach collection="list" item="item" index="index" separator="," >
            (#{item.userId}, #{item.towerId}, #{item.reftime}, #{item.price}, #{item.ctime}, #{item.utime})
        </foreach>
    </insert>

    <insert id="updateProfits" parameterType="java.util.HashMap">
        update tfz_profit set reftime = reftime - ${time}, utime = #{utime} where userId = #{userId} and towerId = #{towerId} and state = 1;
    </insert>

</mapper>